<%= render "shared/partial" %>

<h2>Potepan Shareで
まだ体験したことのない
旅をしよう</h2>
<%= form_tag('/search', method: :get) do %>
  <%= text_field_tag 'search', nil, placeholder: 'エリア名を入力' %>
  <%= submit_tag '検索', name: nil %>
<% end %>

<h2>おすすめのエリア</h2>
<%= link_to("東京", "/search/?search=東京") %>
<%= link_to("大阪", "/search/?search=大阪") %>
<%= link_to("京都", "/search/?search=京都") %>
<%= link_to("札幌", "/search/?search=札幌") %>

<span><%= @rooms.count %>件見つかりました。</span>
<table>
  <thead>
    <tr>
      <th>施設名</th>
      <th>住所</th>
      <th>施設詳細</th>
      <th>宿泊料金（／日）</th>
      <th></th>
    </tr>
  </thead>
  <% @rooms.each do |f| %>
  <tbody>
    <td><%= f.room_name %></td>
    <td><%= f.room_address %></td>
    <td><%= f.room_content %></td>
    <td><%= f.room_price %></td>
    <td><%= link_to "詳細はこちら", f %></td>
  </tbody>
  <% end %>
</table>
